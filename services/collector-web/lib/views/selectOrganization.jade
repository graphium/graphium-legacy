doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    link(rel='icon', type='image/png', href='/favicon_new.ico')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    title Graphium Health - Select Organization
    meta(content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0', name='viewport')
    meta(name='viewport', content='width=device-width')
    include layouts/globalCss.jade
    include layouts/globalHeadScripts
  body
    nav.navbar.navbar-transparent.navbar-absolute
      .container
        .navbar-header
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='#navigation-example-2')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='../dashboard.html')
            img(src='/images/logo-graphium-white_new.png' width='225')
        .collapse.navbar-collapse
          ul.nav.navbar-nav.navbar-right
            li
              a(href='/logout')
                | Logout
    .wrapper.wrapper-full-page
      .full-page.login-page(data-color='azure', data-image='../../assets/img/full-screen-image-1.jpg')
        // you can change the color of the filter page using: data-color="blue | azure | green | orange | red | purple"
        .content
          .container
            .row
              .col-md-4.col-sm-6.col-md-offset-4.col-sm-offset-3
                form(method='post', action='/organization/select')
                  // if you want to have the card without animation please remove the ".card-hidden" class
                  .card.card-hidden
                    .header.text-center Open Organization
                    .content
                      p You are a member of multiple organizations. Please select the organization you would like to open.
                      .form-group
                        label Organization
                        select.selectpicker(id='organizationSelect', name='organizationNameInternal', placeholder='Select Organization')
                          - each organization in _.sortBy(organizations,'organizationName')
                            option(value=organization.organizationNameInternal) #{organization.organizationName}
                    .footer.text-center
                      button.btn.btn-fill.btn-default.btn-wd(type='submit') Open
        footer.footer.footer-transparent
          .container
            nav.pull-left
              //ul
                li
                  a(href='#')
                    | Home
                li
                  a(href='#')
                    | Company
                li
                  a(href='#')
                    | Portfolio
                li
                  a(href='#')
                    | Blog
            p.copyright.pull-right
              - var year = new Date().getFullYear();
              | Â© #{year} 
              a(href='http://www.graphiumhealth.com') Graphium Health
              | , connected surgical experience
  include layouts/globalScripts.jade
  script
    include selectOrganization.js
